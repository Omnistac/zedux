{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Docs",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "args": ["build"],
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}/docs",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "args": ["jest", "--runInBand", "--coverage=false"],
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
