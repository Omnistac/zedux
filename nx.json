{
  "defaultBase": "master",
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "prepublishOnly",
          "test"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "prepublishOnly": {
      "dependsOn": [
        "^prepublishOnly"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "test": {
      "outputs": [
        "{projectRoot}/coverage"
      ]
    }
  }
}
